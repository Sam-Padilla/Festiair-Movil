<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                android:background="#20062D"
                tools:context=".controller.pages.ActivityPrincipal">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/principal_btntext_exit"
            android:textColor="#fff"
            android:fontFamily="@font/krub"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:text="Salir"
            android:layout_alignParentStart="true"
            android:layout_marginStart="38dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="36dp"/>
    <Button
            android:text="Agregar Festival"
            android:layout_width="155dp"
            android:layout_height="34dp"
            android:id="@+id/principal_btn_add"
            android:background="#F433AB"
            android:textColor="#fff"
            android:textSize="15sp"
            android:fontFamily="@font/krub"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_alignTop="@+id/principal_btntext_exit"/>

</RelativeLayout>