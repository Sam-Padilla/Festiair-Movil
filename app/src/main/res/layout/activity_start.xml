<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_start_activity"
    tools:context=".controller.pages.ActivityStart">

    <TextView
            android:text="@string/festiair"
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:id="@+id/logo"
            android:fontFamily="@font/krub"
            android:layout_alignParentTop="true"
            android:layout_marginTop="175dp"
            android:textSize="75sp"
            android:textStyle="bold"
            android:textColor="#fff"/>

    <EditText
            android:layout_width="282dp"
            android:layout_height="44dp"
            android:id="@+id/inputId"
            android:hint="@string/inputId"
            android:inputType="number"
            android:background="#fff"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="298dp"
            android:layout_alignStart="@+id/logo"
            android:textSize="18sp"
            android:fontFamily="@font/krub"
            android:textColor="#707070"/>

    <Button
            android:text="Aceptar"
            android:layout_width="147sp"
            android:layout_height="47sp"
            android:layout_alignParentBottom="true"
            android:id="@+id/start_btnAccept"
            android:layout_marginBottom="224dp"
            android:layout_alignStart="@+id/logo"
            android:background="#F433AB"
            android:textColor="#fff"
            android:textSize="20sp"
            android:fontFamily="@font/krub"/>

    <TextView
            android:text="Obtener ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/start_btntext_obtain"
            android:layout_marginBottom="195dp"
            android:textColor="#fff"
            android:fontFamily="@font/krub"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:layout_alignStart="@+id/logo"/>
</RelativeLayout>